<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background"
    tools:context=".MainActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/activity_toolbar" />

    <ImageView
        android:id="@+id/imageShibaInu"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dip"
        android:layout_marginTop="10dip"
        android:layout_marginEnd="10dip"
        android:layout_marginBottom="10dip"
        android:contentDescription="@string/default_image_description"

        app:layout_constraintBottom_toTopOf="@+id/loadShibaInu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:srcCompat="@drawable/original" />

    <ProgressBar
        android:id="@+id/loadingBar"

        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:alpha="0.5"
        android:indeterminate="true"
        android:indeterminateTint="#000000"
        android:visibility="invisible"

        app:layout_constraintBottom_toBottomOf="@+id/imageShibaInu"
        app:layout_constraintEnd_toEndOf="@+id/imageShibaInu"
        app:layout_constraintStart_toStartOf="@+id/imageShibaInu"
        app:layout_constraintTop_toTopOf="@+id/imageShibaInu" />

    <Button
        android:id="@+id/loadShibaInu"
        android:layout_width="256dp"
        android:layout_height="52dp"
        android:layout_marginBottom="64dp"
        android:backgroundTint="#F5F5F5"
        android:text="@string/button_shiny"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>